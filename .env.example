# Authentication (Required for NextAuth.js)
NEXTAUTH_URL=http://localhost:3000
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-key

# World ID OAuth Configuration
WLD_CLIENT_ID=your_world_id_client_id
WLD_CLIENT_SECRET=your_world_id_client_secret

# World ID Router Contract
WORLD_ID_ROUTER=0x11cA3127182f7583EfC416a8771BD4d11Fae4334

# Public Environment Variables
NEXT_PUBLIC_APP_ID=your_world_id_app_id
NEXT_PUBLIC_ACTION=your_world_id_action
NEXT_PUBLIC_WALLETCONNECT_ID=your_walletconnect_project_id
NEXT_PUBLIC_CONTRACT_ADDRESS=your_contract_address
NEXT_PUBLIC_ALCHEMY_RPC_URL=your_alchemy_rpc_url

# Note: For production deployment on Vercel:
# 1. Remove NEXTAUTH_URL (Vercel sets this automatically)
# 2. Generate a new NEXTAUTH_SECRET
# 3. Update all other variables with production values
